<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="container">
    <div class="content">
      <div class="header-section">
        <h1>All Blogs</h1>
        <!-- Search Bar -->
        <form action="/blogs/search" method="GET" class="search-form">
          <input type="text" name="term" placeholder="Search blogs...">
          <button type="submit" class="btn">Search</button>
        </form>
      </div>
  
      <div class="blogs-container">
        <% if (blogs.length > 0) { %>
          <% blogs.forEach(blog => { %>
            <div class="blog-preview">
              <h2><%= blog.title %></h2>
              <p><%= blog.snippet %></p>
              <a href="/blogs/<%= blog._id %>" class="btn">Read More</a>
            </div>
          <% }) %>
        <% } else { %>
          <p>No blogs found.</p>
        <% } %>
      </div>
    </div>
  </div>

</body>
</html>